<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://priceListPivotEdit.caption" focusComponent="headerForm"
        messagesPack="com.borets.pfa.web.screens.price.pricelist.input">
    <data>
        <instance id="priceListDc" class="com.borets.pfa.entity.price.PriceList">
            <view extends="_local">
                <property name="account" view="_minimal">
                    <property name="contractType"/>
                    <property name="country" view="_minimal"/>
                </property>
                <property name="details" view="_minimal">
                    <property name="analytic" view="_minimal">
                        <property name="jobType"/>
                        <property name="wellEquip"/>
                        <property name="wellTag"/>
                    </property>
                    <property name="revenueType" view="_minimal"/>
                    <property name="value"/>
                </property>
            </view>
            <loader/>
            <collection id="detailsDc" property="details"/>
        </instance>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="editActions" spacing="true">
        <groupBox id="generalTab" caption="msg://generalTab.caption">
            <form id="headerForm" dataContainer="priceListDc" width="100%" childrenCaptionWidth="100px">
                <column width="100%">
                    <pickerField id="accountField" property="account" required="true">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <textArea id="commentField" property="comment" rows="2" colspan="3"/>
                </column>
                <column width="100%">
                    <textField property="account.contractType"/>
                </column>
                <column width="100%">
                    <lookupField id="recordTypeField" property="recordType" required="true"/>
                </column>
                <column width="100%">
                    <datePicker id="yearMonthField" caption="msg://yearMonthField.caption" resolution="MONTH"
                                stylename="custom-height"/>
                    <linkButton id="fillFromPrevBtn" caption="msg://fillFromPrevBtn.caption" icon="COPY"/>
                </column>
            </form>
        </groupBox>
        <groupBox id="detailsBox" spacing="true" caption="msg://detailsBox.caption">
            <groupBox id="filterGb" caption="msg://filterGb.caption" collapsable="true">
                <hbox spacing="true">
                    <lookupField id="filterJobTypeField" optionsEnum="com.borets.pfa.entity.activity.JobType"
                                 inputPrompt="msg://filterJobType.caption"/>
                    <lookupField id="filterWellEquipField" optionsEnum="com.borets.pfa.entity.activity.WellEquip"
                                 inputPrompt="msg://filterWellEquip.caption"/>
                    <lookupField id="filterWellTagField" optionsEnum="com.borets.pfa.entity.activity.WellTag"
                                 inputPrompt="msg://filterWellTag.caption"/>
                </hbox>
            </groupBox>
            <scrollBox width="100%">
                <grid id="pivotGrid" spacing="true">
                    <columns>
                        <column/>
                    </columns>
                    <rows>
                        <row/>
                    </rows>
                </grid>
            </scrollBox>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
