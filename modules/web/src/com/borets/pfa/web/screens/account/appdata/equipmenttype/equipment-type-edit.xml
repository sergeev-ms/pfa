<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://equipmentTypeEdit.caption" focusComponent="form"
        messagesPack="com.borets.pfa.web.screens.account.appdata.equipmenttype">
    <data>
        <instance id="equipmentTypeDc" class="com.borets.pfa.entity.account.appdata.EquipmentType">
            <view extends="_local">
                <property name="revenueType" view="_minimal"/>
                <property name="category" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="equipmentTypeDc">
            <column width="450px">
                <textField id="nameField" property="name" required="true"/>
                <pickerField id="categoryField" property="category" required="true"/>
                <checkBox id="mandatoryField" property="mandatory"/>
                <pickerField id="revenueTypeField" property="revenueType" required="true">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="orderField" property="order"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
