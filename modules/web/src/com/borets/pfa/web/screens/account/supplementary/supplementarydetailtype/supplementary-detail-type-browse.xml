<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://supplementaryDetailTypeBrowse.caption"
        focusComponent="supplementaryDetailTypesTable"
        messagesPack="com.borets.pfa.web.screens.account.supplementary.supplementarydetailtype">
    <data readOnly="true">
        <collection id="supplementaryDetailTypesDc" class="com.borets.pfa.entity.account.supplementary.SupplementaryDetailType">
            <view extends="_local"/>
            <loader id="supplementaryDetailTypesDl">
                <query>
                    <![CDATA[select e from pfa_SupplementaryDetailType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="supplementaryDetailTypesTable" spacing="true">
        <filter id="filter" applyTo="supplementaryDetailTypesTable" dataLoader="supplementaryDetailTypesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="supplementaryDetailTypesTable" width="100%" dataContainer="supplementaryDetailTypesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                <button id="createBtn" action="supplementaryDetailTypesTable.create"/>
                <button id="editBtn" action="supplementaryDetailTypesTable.edit"/>
                <button id="removeBtn" action="supplementaryDetailTypesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
