<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://depthBrowse.caption" focusComponent="depthsTable"
        messagesPack="com.borets.pfa.web.screens.account.system.classification.depth">
    <data readOnly="true">
        <collection id="depthsDc" class="com.borets.pfa.entity.account.system.classification.Depth">
            <view extends="_local"/>
            <loader id="depthsDl">
                <query>
                    <![CDATA[select e from pfa_Depth e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="depthsTable" spacing="true">
        <filter id="filter" applyTo="depthsTable" dataLoader="depthsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="depthsTable" width="100%" dataContainer="depthsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                <button id="createBtn" action="depthsTable.create"/>
                <button id="editBtn" action="depthsTable.edit"/>
                <button id="removeBtn" action="depthsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
