<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://otherMaterialsBrowse.caption" focusComponent="otherMaterialsTable"
        messagesPack="com.borets.pfa.web.screens.account.system.classification.othermaterials">
    <data readOnly="true">
        <collection id="otherMaterialsDc" class="com.borets.pfa.entity.account.system.classification.OtherMaterials">
            <view extends="_local"/>
            <loader id="otherMaterialsDl">
                <query>
                    <![CDATA[select e from pfa_OtherMaterials e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="otherMaterialsTable" spacing="true">
        <filter id="filter" applyTo="otherMaterialsTable" dataLoader="otherMaterialsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="otherMaterialsTable" width="100%" dataContainer="otherMaterialsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                <button id="createBtn" action="otherMaterialsTable.create"/>
                <button id="editBtn" action="otherMaterialsTable.edit"/>
                <button id="removeBtn" action="otherMaterialsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
