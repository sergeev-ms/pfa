<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://directSaleEdit.caption" focusComponent="form"
        messagesPack="com.borets.pfa.web.screens.account.directsale.directsale">
    <data>
        <instance id="directSaleDc" class="com.borets.pfa.entity.account.directsale.DirectSale">
            <view extends="_local">
                <property name="account" view="_minimal"/>
                <property name="details" view="_local">
                    <property name="part" view="_minimal"/>
                </property>
                <property name="createTs"/>
            </view>
            <loader/>
            <collection id="detailsDc" property="details"/>
        </instance>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="detailsBox" spacing="true">
        <form id="form" dataContainer="directSaleDc">
            <column width="450px">
                <pickerField id="accountField" property="account" required="true">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <lookupField id="recordTypeField" property="recordType" required="true"/>
                <lookupField id="statusField" property="status" required="true"/>
            </column>
            <column width="450px">
                <datePicker id="datePicker" property="date" resolution="MONTH" stylename="custom-height"
                            caption="msg://datePicker.caption"/>
                <textField id="probabilityField" property="probability" required="true"/>
                <textField id="bShareField" property="bShare" required="true"/>
            </column>
        </form>
        <groupBox id="detailsBox" caption="msg://com.borets.pfa.entity.account.directsale/DirectSale.details" expand="detailsTable">
            <table id="detailsTable" dataContainer="detailsDc" width="100%">
                <actions>
                    <action id="create" type="create"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="part"/>
                    <column id="price" width="200px"/>
                    <column id="length" width="200px"/>
                </columns>
                <buttonsPanel>
                    <button action="detailsTable.create"/>
                    <button action="detailsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
