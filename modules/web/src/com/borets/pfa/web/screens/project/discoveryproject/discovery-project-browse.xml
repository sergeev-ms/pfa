<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://discoveryProjectBrowse.caption"
        focusComponent="discoveryProjectsTable"
        messagesPack="com.borets.pfa.web.screens.project.discoveryproject">
    <data readOnly="true">
        <collection id="discoveryProjectsDc"
                    class="com.borets.pfa.entity.project.DiscoveryProject">
            <view extends="_local"/>
            <loader id="discoveryProjectsDl">
                <query>
                    <![CDATA[select e from pfa_DiscoveryProject e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="discoveryProjectsTable"
            spacing="true">
        <filter id="filter"
                applyTo="discoveryProjectsTable"
                dataLoader="discoveryProjectsDl">
            <properties include=".*"/>
        </filter>
        <table id="discoveryProjectsTable"
               width="100%"
               dataContainer="discoveryProjectsDc"
               multiselect="true">
            <actions>
                <action id="refresh" type="refresh"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="wellId"/>
                <column id="customerNo"/>
                <column id="power"/>
                <column id="region"/>
                <column id="well"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="refreshBtn" action="discoveryProjectsTable.refresh"/>
                <button id="excelBtn" action="discoveryProjectsTable.excel"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
