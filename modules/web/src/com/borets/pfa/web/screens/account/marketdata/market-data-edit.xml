<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://marketDataEdit.caption" focusComponent="form"
        messagesPack="com.borets.pfa.web.screens.account.marketdata">
    <data>
        <instance id="marketDataDc" class="com.borets.pfa.entity.account.marketdata.MarketData">
            <view extends="_local">
                <property name="yearMonth"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="marketDataDc" width="100%">
                <column width="100%">
                    <datePicker id="yearMonthField" resolution="MONTH" caption="msg://yearMonthField.caption"
                                stylename="custom-height"/>
                    <lookupField id="fieldTypeField" property="fieldType" required="true"/>
                    <textField id="trlField" property="trl" required="true"/>
                    <textField id="arlField" property="arl" required="true"/>
                    <textField id="wellCheckRateField" property="wellCheckRate" required="true"/>
                    <currencyField id="espLtTargetField" property="espLtTarget" required="true" currency="$"/>
                    <currencyField id="marketShareTargetField" property="marketShareTarget" required="true" currency="$"/>
                </column>
                <column width="100%">
                    <lookupField id="recordTypeField" property="recordType" required="true"/>
                    <lookupField id="runsNumberField" property="runsNumber" required="true"/>
                    <textField id="firstRunDurationField" property="firstRunDuration" required="true"/>
                    <textField id="secondRunDurationField" property="secondRunDuration" required="true"/>
                    <textField id="thirdRunDurationField" property="thirdRunDuration" required="true"/>
                    <textField id="thirdPlusRunDurationField" property="thirdPlusRunDuration" required="true"/>
                </column>
                <column width="100%">
                    <textField id="wellCountField" property="wellCount" required="true"/>
                    <textField id="newWellYearField" property="newWellYear" required="true"/>
                    <textField id="conversionRateField" property="conversionRate" required="true"/>
                    <textField id="oilPermitsField" property="oilPermits" required="true"/>
                    <textField id="rigQtyField" property="rigQty" required="true"/>
                    <textField id="ducQtyField" property="ducQty" required="true"/>
                </column>
                <column width="100%">
                    <textField id="completionField" property="completion" required="true"/>
                    <textField id="activityRateField" property="activityRate" required="true"/>
                    <currencyField id="budgetField" property="budget" required="true" currency="$"/>
                    <textField id="bShareField" property="bShare" required="true"/>
                    <checkBox id="isWellMonitorField" property="isWellMonitor"/>
                    <textField id="wellMonitorQtyField" property="wellMonitorQty" required="true"/>
                    <textField id="bWellCountField" property="bWellCount" required="true"/>
                    <currencyField id="rentalCapexField" property="rentalCapex" required="true" currency="$"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
