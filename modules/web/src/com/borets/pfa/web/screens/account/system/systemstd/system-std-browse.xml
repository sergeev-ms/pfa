<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://systemStdBrowse.caption" focusComponent="systemStdsTable"
        messagesPack="com.borets.pfa.web.screens.account.system.systemstd">
    <data readOnly="true">
        <collection id="systemStdsDc" class="com.borets.pfa.entity.account.system.SystemStd">
            <loader id="systemStdsDl">
                <query>
                    <![CDATA[select e from pfa_SystemStd e]]>
                </query>
            </loader>
            <view extends="_local">
                <property name="pumpModel"/>
                <property name="depth"/>
                <property name="sealConfig"/>
                <property name="pumpConfig"/>
                <property name="pumpMaterials"/>
                <property name="sealMaterials"/>
                <property name="motorMaterials"/>
            </view>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="systemStdsTable" spacing="true">
        <filter id="filter" applyTo="systemStdsTable" dataLoader="systemStdsDl" applyImmediately="true" columnsCount="4">
            <property name=""/>
            <properties include=".*"/>
        </filter>
        <groupTable id="systemStdsTable" width="100%" dataContainer="systemStdsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="systemId"/>
                <column id="casingSize"/>
                <column id="casingWeight"/>
                <column id="pumpModel"/>
                <column id="depth"/>
                <column id="sealConfig"/>
                <column id="pumpConfig"/>
                <column id="pumpMaterials"/>
                <column id="sealMaterials"/>
                <column id="motorMaterials"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                <button id="createBtn" action="systemStdsTable.create"/>
                <button id="editBtn" action="systemStdsTable.edit"/>
                <button id="removeBtn" action="systemStdsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
