<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://accountBrowse.caption" focusComponent="accountsTable"
        messagesPack="com.borets.pfa.web.screens.account">
    <data readOnly="true">
        <collection id="accountsDc" class="com.borets.pfa.entity.account.Account">
            <view extends="_local">
                <property name="customer"/>
                <property name="parent" view="_minimal"/>
                <property name="actualRevision" view="_local">
                    <property name="manager"/>
                    <property name="yearMonth"/>
                </property>
                <property name="country" view="_minimal"/>
            </view>
            <loader id="accountsDl">
                <query>
                    <![CDATA[select e from pfa_Account e order by e.name]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="accountsTable" spacing="true">
        <filter id="filter" applyTo="accountsTable" dataLoader="accountsDl" useMaxResults="false"
                windowCaptionUpdateEnabled="false">
            <properties include=".*"/>
        </filter>
        <treeTable id="accountsTable" width="100%" dataContainer="accountsDc" hierarchyProperty="parent">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="expandAll" description="msg://accountsTable.expandAll.description" icon="CARET_DOWN"/>
                <action id="collapseAll" description="msg://accountsTable.collapseAll.description" icon="CARET_RIGHT"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="contractType"/>
                <column id="applicationType"/>
                <column id="fieldType"/>
                <column id="parent" collapsed="true"/>
                <column id="customer" collapsed="true"/>
                <column id="actualRevision.type"/>
                <column id="actualRevision.manager"/>
                <column id="actualRevision.yearMonth"/>
                <column id="country" collapsed="true"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                <button id="createBtn" action="accountsTable.create"/>
                <button id="editBtn" action="accountsTable.edit"/>
                <button id="removeBtn" action="accountsTable.remove"/>
                <button action="accountsTable.expandAll" stylename="icon-only"/>
                <button action="accountsTable.collapseAll" stylename="icon-only"/>
            </buttonsPanel>
        </treeTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
