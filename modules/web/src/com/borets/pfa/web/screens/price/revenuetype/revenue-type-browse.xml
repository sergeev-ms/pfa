<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://revenueTypeBrowse.caption"
        focusComponent="revenueTypesTable"
        messagesPack="com.borets.pfa.web.screens.price.revenuetype">
    <data readOnly="true">
        <collection id="revenueTypesDc" class="com.borets.pfa.entity.price.RevenueType">
            <view extends="_local"/>
            <loader id="revenueTypesDl">
                <query>
                    <![CDATA[select e from pfa_RevenueType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="revenueTypesTable" spacing="true">
        <filter id="filter" applyTo="revenueTypesTable" dataLoader="revenueTypesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="revenueTypesTable" width="100%" dataContainer="revenueTypesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                <button id="createBtn" action="revenueTypesTable.create"/>
                <button id="editBtn" action="revenueTypesTable.edit"/>
                <button id="removeBtn" action="revenueTypesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
