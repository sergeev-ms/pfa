<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://countrySettingSystemAllocationRemapEdit.caption"
        focusComponent="form"
        messagesPack="com.borets.pfa.web.screens.setting.countrysettingsystemallocationremap">
    <data>
        <instance id="countrySettingSystemAllocationRemapDc"
                  class="com.borets.pfa.entity.setting.CountrySettingSystemAllocationRemap">
            <view extends="_local">
                <property name="utilizationValueType" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="countrySettingSystemAllocationRemapDc">
            <column width="850px">
                <pickerField id="utilizationValueTypeField" property="utilizationValueType">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <sourceCodeEditor id="remapScriptField" property="remapScript" mode="Groovy"
                                  contextHelpText="msg://remapScriptField.contextHelpText" contextHelpTextHtmlEnabled="true"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
