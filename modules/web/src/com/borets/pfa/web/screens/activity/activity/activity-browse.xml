<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://activityBrowse.caption"
        focusComponent="activitiesTable"
        messagesPack="com.borets.pfa.web.screens.activity.activity">
    <data readOnly="true">
        <collection id="activitiesDc"
                    class="com.borets.pfa.entity.activity.Activity">
            <view extends="_local">
                <property name="account" view="_minimal"/>
            </view>
            <loader id="activitiesDl">
                <query>
                    <![CDATA[select e from pfa_Activity e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="activitiesTable"
            spacing="true">
        <filter id="filter"
                applyTo="activitiesTable"
                dataLoader="activitiesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="activitiesTable"
                    width="100%"
                    dataContainer="activitiesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="account"/>
                <column id="year"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="activitiesTable.create"/>
                <button id="editBtn" action="activitiesTable.edit"/>
                <button id="removeBtn" action="activitiesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
