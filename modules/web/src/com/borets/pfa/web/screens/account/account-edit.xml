<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://accountEdit.caption" focusComponent="form"
        messagesPack="com.borets.pfa.web.screens.account">
    <data>
        <instance id="accountDc" class="com.borets.pfa.entity.account.Account">
            <view extends="_local">
                <property name="customer"/>
                <property name="parent" view="_minimal"/>
                <property name="actualRevision" view="_local">
                    <property name="manager"/>
                    <property name="createdBy"/>
                    <property name="createTs"/>
                </property>
                <property name="actualMarketDetail" view="_local">
                    <property name="createdBy"/>
                    <property name="createTs"/>
                </property>
                <property name="actualAppDetail" view="_minimal">
                    <property name="yearMonth"/>
                    <property name="systemAllocations" view="_local">
                        <property name="system" view="_local"/>
                    </property>
                    <property name="utilization" view="_local">
                        <property name="equipmentType"/>
                    </property>
                    <property name="createdBy"/>
                    <property name="createTs"/>
                </property>
            </view>
            <loader/>
            <instance id="actualRevisionDc" property="actualRevision"/>
            <instance id="actualMarketDataDc" property="actualMarketDetail"/>
            <instance id="applicationDataDc" property="actualAppDetail">
                <collection id="utilizationDc" property="utilization"/>
            </instance>
        </instance>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="tabSheet" spacing="true">
        <tabSheet id="tabSheet">
            <tab id="generalTab" caption="msg://generalTab.caption" spacing="true" margin="true,false,false,false" expand="expandDummy">
                <groupBox id="accountDataGb" caption="msg://accountDataGb.caption" spacing="true">
                    <form id="form" dataContainer="accountDc" childrenCaptionWidth="170px" width="100%">
                        <column width="100%">
                            <textField id="nameField" property="name"/>
                            <pickerField property="customer"/>
                        </column>
                        <column width="100%">
                            <pickerField id="parentField" property="parent"/>
                            <textField id="typeField" property="type" editable="false" dataContainer="actualRevisionDc"/>
                        </column>
                        <column width="100%">
                            <textField id="managerField" property="manager" editable="false" dataContainer="actualRevisionDc"/>
                        </column>
                    </form>
                    <hbox spacing="true" align="MIDDLE_RIGHT">
                        <linkButton id="createRevisionBtn" caption="msg://createRevisionBtn.caption" icon="CREATE_ACTION"/>
                        <linkButton id="showRevisionsBtn" caption="msg://showRevisionsBtn.caption" icon="HISTORY"/>
                    </hbox>
                </groupBox>
                <groupBox id="marketDataGb" caption="msg://marketDataGb.caption" spacing="true">
                    <form id="actualMarketForm" dataContainer="actualMarketDataDc" childrenCaptionWidth="170px" width="100%">
                        <column width="100%">
                            <textField property="contractType" editable="false"/>
                            <textField property="applicationType" editable="false"/>
                            <textField property="fieldType" editable="false"/>
                            <textField property="trl" editable="false"/>
                            <textField property="arl" editable="false"/>
                        </column>
                        <column width="100%">
                            <textField property="runsNumber" editable="false"/>
                            <textField property="firstRunDuration" editable="false"/>
                            <textField property="secondRunDuration" editable="false"/>
                            <textField property="thirdRunDuration" editable="false"/>
                            <textField property="thirdPlusRunDuration" editable="false"/>
                        </column>
                        <column width="100%">
                            <textField id="wellCountField" property="wellCount" editable="false"/>
                            <textField id="newWellYearField" property="newWellYear" editable="false"/>
                            <textField id="conversionRateField" property="conversionRate" editable="false"/>
                            <textField id="oilPermitsField" property="oilPermits" editable="false"/>
                            <textField id="rigQtyField" property="rigQty" editable="false"/>
                            <textField id="ducQtyField" property="ducQty" editable="false"/>
                        </column>
                        <column width="100%">
                            <textField id="completionField" property="completion" editable="false"/>
                            <textField id="activityRateField" property="activityRate" editable="false"/>
                            <currencyField id="budgetField" property="budget" editable="false" currency="$"/>
                            <textField id="bShareField" property="bShare" editable="false"/>
                            <checkBox id="isWellMonitorField" property="isWellMonitor" editable="false"/>
                            <textField id="wellMonitorQtyField" property="wellMonitorQty" editable="false"/>
                            <textField id="bWellCountField" property="bWellCount" editable="false"/>
                            <currencyField id="rentalCapexField" property="rentalCapex" editable="false" currency="$"/>
                        </column>
                    </form>
                    <hbox spacing="true" align="MIDDLE_RIGHT">
                        <linkButton id="createMarketDataBtn" caption="msg://createMarketDataBtn.caption" icon="CREATE_ACTION"/>
                        <linkButton id="showMarketDetailsBtn" caption="msg://showMarketDetailsBtn.caption" icon="HISTORY"/>
                    </hbox>
                </groupBox>
                <cssLayout id="expandDummy"/>
            </tab>
            <tab id="appDataTab" caption="msg://appDataTab.caption" spacing="true"
                 margin="true,false,false,false" expand="appDataGb">
                <groupBox id="appDataGb" caption="msg://appDataGb.caption" spacing="true" expand="applicationDataFragment">
                    <fragment id="applicationDataFragment" screen="pfa_ApplicationDataFragment"/>
                </groupBox>
                <hbox spacing="true" align="MIDDLE_RIGHT">
                    <linkButton id="createAppDataBtn" caption="msg://createAppDataBtn.caption" icon="CREATE_ACTION"/>
                    <linkButton id="showAppDetailsBtn" caption="msg://showAppDetailsBtn.caption" icon="HISTORY"/>
                </hbox>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
