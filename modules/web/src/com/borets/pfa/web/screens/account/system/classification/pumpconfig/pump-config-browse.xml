<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://pumpConfigBrowse.caption" focusComponent="pumpConfigsTable"
        messagesPack="com.borets.pfa.web.screens.account.system.classification.pumpconfig">
    <data readOnly="true">
        <collection id="pumpConfigsDc" class="com.borets.pfa.entity.account.system.classification.PumpConfig">
            <view extends="_local"/>
            <loader id="pumpConfigsDl">
                <query>
                    <![CDATA[select e from pfa_PumpConfig e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="pumpConfigsTable" spacing="true">
        <filter id="filter" applyTo="pumpConfigsTable" dataLoader="pumpConfigsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="pumpConfigsTable" width="100%" dataContainer="pumpConfigsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                <button id="createBtn" action="pumpConfigsTable.create"/>
                <button id="editBtn" action="pumpConfigsTable.edit"/>
                <button id="removeBtn" action="pumpConfigsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
