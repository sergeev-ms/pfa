<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://demandTypeBrowse.caption"
        focusComponent="demandTypesTable"
        messagesPack="com.borets.pfa.web.screens.demand.demandtype">
    <data readOnly="true">
        <collection id="demandTypesDc"
                    class="com.borets.pfa.entity.demand.DemandType">
            <view extends="_local"/>
            <loader id="demandTypesDl">
                <query>
                    <![CDATA[select e from pfa_DemandType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="demandTypesTable"
            spacing="true">
        <filter id="filter"
                applyTo="demandTypesTable"
                dataLoader="demandTypesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="demandTypesTable"
                    width="100%"
                    dataContainer="demandTypesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="demandTypesTable.create"/>
                <button id="editBtn" action="demandTypesTable.edit"/>
                <button id="removeBtn" action="demandTypesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
