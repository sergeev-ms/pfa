<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://equipmentTypeBrowse.caption" focusComponent="equipmentTypesTable"
        messagesPack="com.borets.pfa.web.screens.account.appdata.equipmenttype">
    <data readOnly="true">
        <collection id="equipmentTypesDc" class="com.borets.pfa.entity.account.appdata.EquipmentType">
            <view extends="_local">
                <property name="revenueType" view="_minimal"/>
                <property name="category" view="_minimal"/>
            </view>
            <loader id="equipmentTypesDl">
                <query>
                    <![CDATA[select e from pfa_EquipmentType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="equipmentTypesTable" spacing="true">
        <filter id="filter" applyTo="equipmentTypesTable" dataLoader="equipmentTypesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="equipmentTypesTable" width="100%" dataContainer="equipmentTypesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="category"/>
                <column id="mandatory"/>
                <column id="revenueType"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                <button id="createBtn" action="equipmentTypesTable.create"/>
                <button id="editBtn" action="equipmentTypesTable.edit"/>
                <button id="removeBtn" action="equipmentTypesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
