<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://applicationDataEdit.caption" focusComponent="form"
        messagesPack="com.borets.pfa.web.screens.account.appdata.applicationdata">
    <data>
        <instance id="applicationDataDc" class="com.borets.pfa.entity.account.appdata.ApplicationData">
            <view extends="_local">
                <property name="yearMonth"/>
                <property name="systems"/>
                <property name="systemAllocations" view="_local">
                    <property name="system" view="_local"/>
                </property>
                <property name="utilization" view="_local">
                    <property name="equipmentType"/>
                </property>
            </view>
            <loader/>
            <collection id="systemsDc" property="systems"/>
            <collection id="breakdownsDc" property="utilization"/>
        </instance>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="applicationDateFragment" spacing="true">
        <form id="form" dataContainer="applicationDataDc">
            <column width="450px">
                <datePicker id="yearMonthField" resolution="MONTH" caption="msg://yearMonthField.caption" stylename="custom-height"/>
            </column>
        </form>
        <fragment id="applicationDateFragment" screen="pfa_ApplicationDataFragment"/>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
