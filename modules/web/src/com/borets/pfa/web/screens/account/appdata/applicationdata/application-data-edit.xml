<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://applicationDataEdit.caption" focusComponent="form"
        messagesPack="com.borets.pfa.web.screens.account.appdata.applicationdata">
    <data>
        <instance id="applicationDataDc" class="com.borets.pfa.entity.account.appdata.ApplicationData">
            <view extends="_local">
                <property name="account" view="_minimal">
                    <property name="actualMarketDetail">
                        <property name="runsNumber"/>
                    </property>
                </property>
                <property name="yearMonth"/>
                <property name="systemAllocations" view="_local">
                    <property name="system" view="_local">
                        <property name="pumpModel"/>
                        <property name="depth"/>
                        <property name="motorType"/>
                        <property name="pumpConfig"/>
                        <property name="intakeConfig"/>
                        <property name="vaproConfig"/>
                        <property name="sealConfig"/>
                        <property name="pumpMaterials"/>
                        <property name="sealMaterials"/>
                        <property name="motorMaterials"/>
                    </property>
                </property>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="applicationDateFragment" spacing="true">
        <form id="form" dataContainer="applicationDataDc">
            <column width="450px">
                <datePicker id="yearMonthField" resolution="MONTH" caption="msg://yearMonthField.caption"
                            stylename="custom-height"/>
            </column>
            <column width="450px">
                <lookupField id="recordTypeField" property="recordType" required="true"/>
            </column>
        </form>
        <fragment id="applicationDateFragment" screen="pfa_ApplicationDataFragment"/>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
