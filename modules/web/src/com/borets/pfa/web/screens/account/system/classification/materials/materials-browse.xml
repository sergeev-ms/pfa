<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://materialsBrowse.caption" focusComponent="materialsTable"
        messagesPack="com.borets.pfa.web.screens.account.system.classification.materials">
    <data readOnly="true">
        <collection id="materialsDc" class="com.borets.pfa.entity.account.system.classification.Materials">
            <view extends="_local"/>
            <loader id="materialsDl">
                <query>
                    <![CDATA[select e from pfa_Materials e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="materialsTable" spacing="true">
        <filter id="filter" applyTo="materialsTable" dataLoader="materialsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="materialsTable" width="100%" dataContainer="materialsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                <button id="createBtn" action="materialsTable.create"/>
                <button id="editBtn" action="materialsTable.edit"/>
                <button id="removeBtn" action="materialsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
