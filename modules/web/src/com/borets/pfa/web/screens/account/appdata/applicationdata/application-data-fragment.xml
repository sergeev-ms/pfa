<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
        <instance id="applicationDataDc" class="com.borets.pfa.entity.account.appdata.ApplicationData" provided="true">
            <collection id="systemsDc" property="systems"/>
            <collection id="utilizationDc" property="utilization"/>
        </instance>
    </data>
    <layout expand="tabSheet">
        <tabSheet id="tabSheet">
            <tab id="systemsTab" caption="msg://systemsTab.caption" margin="true,false,false,false" expand="systemsGb">
                <groupBox id="systemsGb" caption="msg://systemsGb.caption" expand="systemsTable">
                    <table id="systemsTable" dataContainer="systemsDc" width="100%">
                        <actions>
                            <action id="create" type="create"/>
                            <action id="add" type="add"/>
                            <action id="edit" type="edit"/>
                            <action id="remove" type="remove"/>
                        </actions>
                        <columns>
                            <column id="systemId"/>
                            <column id="casingSize"/>
                            <column id="casingWeight"/>
                            <column id="pump"/>
                            <column id="motor"/>
                            <column id="motorPower"/>
                            <column id="head"/>
                        </columns>
                        <rows/>
                        <buttonsPanel id="systemsTableBtnPanel">
                            <button action="systemsTable.create"/>
                            <button action="systemsTable.add"/>
                            <button action="systemsTable.edit"/>
                            <button action="systemsTable.remove"/>
                        </buttonsPanel>
                    </table>
                </groupBox>
            </tab>
            <tab id="utilizationTab" caption="msg://utilizationTab.caption" margin="true,false,false,false" expand="utilizationGb">
                <groupBox id="utilizationGb" caption="msg://utilizationGb.caption" expand="utilizationTable">
                    <table id="utilizationTable" dataContainer="utilizationDc" width="100%" editable="true">
                        <columns>
                            <column id="equipmentType"/>
                            <column id="firstRunValue" editable="true" required="true"/>
                            <column id="sequentRunValue" editable="true" required="true"/>
                        </columns>
                        <rows/>
                    </table>
                </groupBox>
            </tab>
        </tabSheet>
    </layout>
</fragment>

