<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://equipmentUtilizationEdit.caption" focusComponent="equipmentUtilizationFragment"
        messagesPack="com.borets.pfa.web.screens.account.utilization.equipmentutilization">
    <data>
        <instance id="equipmentUtilizationDc" class="com.borets.pfa.entity.account.utilization.EquipmentUtilization">
            <view extends="_local">
                <property name="account" view="_minimal">
                    <property name="country" view="_minimal"/>
                </property>
                <property name="details" view="_local">
                    <property name="equipmentType" view="_minimal"/>
                </property>
            </view>
            <loader id="equipmentUtilizationDl"/>
            <collection id="detailsDc" property="details">
                <collection id="detailValuesDc" property="values"/>
            </collection>
        </instance>
        <collection id="equipmentUtilizationDetailValueDc"
                    class="com.borets.pfa.entity.account.utilization.EquipmentUtilizationDetailValue">
            <view extends="_local">
                <property name="detail" view="_minimal"/>
                <property name="valueType" view="_minimal"/>
            </view>
            <loader id="equipmentUtilizationDetailValueDl">
                <query>
                    select e from pfa_EquipmentUtilizationDetailValue e
                    where e.detail.equipmentUtilization = :container_equipmentUtilizationDc
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="detailsBox" spacing="true">
        <groupBox id="detailsBox" caption="msg://com.borets.pfa.entity.account.utilization/EquipmentUtilization.details" expand="equipmentUtilizationFragment">
            <fragment id="equipmentUtilizationFragment" screen="pfa_EquipmentUtilizationFragment" width="100%"/>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
