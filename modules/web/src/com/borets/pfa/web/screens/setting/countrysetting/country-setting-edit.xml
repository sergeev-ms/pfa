<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://countrySettingEdit.caption"
        focusComponent="form" messagesPack="com.borets.pfa.web.screens.setting.countrysetting">
    <data>
        <instance id="countrySettingDc" class="com.borets.pfa.entity.setting.CountrySetting">
            <view extends="_local">
                <property name="country" view="_minimal"/>
                <property name="analyticSettings" view="_local">
                    <property name="analyticSet" view="_local"/>
                </property>
            </view>
            <loader/>
            <collection id="analyticSettingsDc" property="analyticSettings"/>
        </instance>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="tabSheet" spacing="true">
        <form id="form" dataContainer="countrySettingDc">
            <column width="450px">
                <pickerField id="countryField" property="country" required="true">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <tabSheet id="tabSheet" stylename="framed">
            <tab id="analyticSettingsTab" spacing="true"  margin="true,true,true,true"
                 caption="msg://analyticSettingsTab.caption" expand="analyticSettingsTable">
                <table id="analyticSettingsTable" dataContainer="analyticSettingsDc" width="100%" editable="true"
                       sortable="false" reorderingAllowed="false">
                    <actions>
                        <action id="add" caption="msg://analyticSettingsTable.add.caption" icon="ADD_ACTION"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="analyticSet.jobType"/>
                        <column id="analyticSet.wellTag"/>
                        <column id="analyticSet.wellEquip"/>
                        <column id="priceList" editable="true"/>
                        <column id="activityPlan" editable="true"/>
                        <column id="order" editable="true"/>
                    </columns>
                    <buttonsPanel>
                        <button action="analyticSettingsTable.add"/>
                        <button action="analyticSettingsTable.remove"/>
                    </buttonsPanel>
                </table>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
