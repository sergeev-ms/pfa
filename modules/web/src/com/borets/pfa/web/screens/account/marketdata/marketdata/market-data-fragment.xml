<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
        <instance id="marketDataDc" class="com.borets.pfa.entity.account.marketdata.MarketData" provided="true"/>
    </data>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="headerForm" dataContainer="marketDataDc">
                <datePicker id="yearMonthField" resolution="MONTH" caption="msg://yearMonthField.caption"
                            stylename="custom-height"/>
            </form>
            <hbox spacing="true" width="100%">
                <groupBox caption="msg://marketDataFragmentHeaders.activityInputData"
                          icon="DATABASE" showAsPanel="true">
                    <form id="activityInputForm" dataContainer="marketDataDc" width="100%" height="100%">
                        <column width="100%">
                            <textField id="trlField" property="trl"/>
                            <textField id="arlField" property="arl" required="true"/>
                            <textField id="boretsRunLifeField" property="boretsRunLife" required="false"/>
                            <textField id="conversionRateField" property="conversionRate" required="true"/>
                            <textField id="delayFactorField" property="delayFactor" required="true"/>
                            <lookupField id="runsNumberField" property="runsNumber" required="false"/>
                            <textField id="firstRunDurationField" property="firstRunDuration" required="false"/>
                            <textField id="secondRunDurationField" property="secondRunDuration" required="false"/>
                            <textField id="thirdRunDurationField" property="thirdRunDuration" required="false"/>
                            <textField id="thirdPlusRunDurationField" property="thirdPlusRunDuration" required="false"/>
                        </column>
                    </form>
                </groupBox>

                <groupBox caption="msg://marketDataFragmentHeaders.customerData" spacing="true"
                          icon="BUILDING" showAsPanel="true" expand="calculateCustomerDataBtn">
                    <form id="customerDataForm" dataContainer="marketDataDc" width="100%">
                        <column width="100%">
                            <textField id="wellCountField" property="wellCount" required="true"/>
                            <textField id="newWellYearField" property="newWellYear" required="true"/>
                            <textField id="customerPullsInYearField" property="customerPullsInYear" required="true"
                                       contextHelpText="msg://customerPullsInYearField.contextHelpText"/>
                            <textField id="customerRunbackInYearField" property="customerRunbackInYear" required="true"
                                       contextHelpText="msg://customerRunbackInYearField.contextHelpText"/>
                            <textField id="customerInstallInYear" property="customerInstallInYear" required="true"
                                       contextHelpText="msg://customerInstallInYear.contextHelpText"/>
                            <textField id="customerWellsClosingInYear" property="customerWellsClosingInYear" required="true"
                                       contextHelpText="msg://customerWellsClosingInYear.contextHelpText"/>
                            <currencyField id="budgetField" property="budget" required="false" currency="$"/>
                        </column>
                    </form>
                    <linkButton id="calculateCustomerDataBtn" caption="msg://calculateCustomerDataBtn.caption"
                                icon="REFRESH_ACTION" shortcut="ALT-SHIFT-C" align="MIDDLE_RIGHT"/>
                </groupBox>

                <groupBox caption="msg://marketDataFragmentHeaders.boretsData"
                          icon="INDUSTRY" showAsPanel="true">
                    <form id="boretsDataForm" dataContainer="marketDataDc" width="100%" height="100%">
                        <column width="100%">
                            <textField id="bWellCountField" property="bWellCount" required="false"/>
                            <textField id="boretsNewWellsInYearField" property="boretsNewWellsInYear" required="false"/>
                            <textField id="boretsRunbackInYearField" property="boretsRunbackInYear" required="false"/>
                            <textField id="boretsInstallInYearField" property="boretsInstallInYear" required="false"/>
                            <textField id="boretsPullsInYearField" property="boretsPullsInYear" required="false"/>
                            <textField id="boretsWellsClosingField" property="boretsWellsClosingInYear" required="false"/>
                            <currencyField id="boretsRevenueForecastField" property="boretsRevenueForecast" required="false" currency="$"/>
                            <currencyField id="marketShareTargetField" property="marketShareTarget" required="false" currency="$"/>
                            <currencyField id="espLtTargetField" property="espLtTarget" required="false" currency="$"/>
                            <textField id="bShareField" property="bShare" required="false"/>
                        </column>
                    </form>
                </groupBox>

                <groupBox caption="msg://marketDataFragmentHeaders.additionalData"
                          icon="PLUS_CIRCLE" showAsPanel="true">
                    <form id="additionalDataForm" dataContainer="marketDataDc" width="100%" height="100%">
                        <column width="100%">
                            <textField id="wellCheckRateField" property="wellCheckRate" required="false"/>
                            <checkBox id="isWellMonitorField" property="isWellMonitor"/>
                            <textField id="wellMonitorQtyField" property="wellMonitorQty" required="false"/>
                            <currencyField id="rentalCapexField" property="rentalCapex" required="false" currency="$"/>
                        </column>
                    </form>
                </groupBox>
            </hbox>

        </scrollBox>
    </layout>
</fragment>

