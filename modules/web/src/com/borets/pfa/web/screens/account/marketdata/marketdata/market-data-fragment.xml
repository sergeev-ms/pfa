<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
        <instance id="marketDataDc" class="com.borets.pfa.entity.account.marketdata.MarketData" provided="true"/>
    </data>
<!--    <layout expand="scrollBox" spacing="false" margin="false">-->
    <layout spacing="false" margin="false">
        <scrollBox id="scrollBox" spacing="true">
            <form id="headerForm" dataContainer="marketDataDc">
                <datePicker id="yearMonthField" resolution="MONTH" caption="msg://yearMonthField.caption"
                            stylename="custom-height"/>
            </form>
            <hbox spacing="true" width="100%">
                <groupBox caption="msg://marketDataFragmentHeaders.activityInputData"
                          icon="DATABASE" showAsPanel="true" stylename="borderless">
                    <form id="activityInputForm" dataContainer="marketDataDc" width="100%">
                        <column width="100%">
                            <textField id="trlField" property="trl"/>
                            <textField id="arlField" property="arl"/>
                            <textField id="boretsRunLifeField" property="boretsRunLife" required="false"/>
                            <textField id="conversionRateField" property="conversionRate" required="false"/>
                            <textField id="delayFactorField" property="delayFactor" required="false"/>
                            <lookupField id="runsNumberField" property="runsNumber" required="false"/>
                            <textField id="firstRunDurationField" property="firstRunDuration" required="false"/>
                            <textField id="secondRunDurationField" property="secondRunDuration" required="false"/>
                            <textField id="thirdRunDurationField" property="thirdRunDuration" required="false"/>
                            <textField id="thirdPlusRunDurationField" property="thirdPlusRunDuration" required="false"/>
                        </column>
                    </form>
                </groupBox>

                <groupBox caption="msg://marketDataFragmentHeaders.customerData"
                          icon="BUILDING" showAsPanel="true" stylename="borderless">
                    <form id="customerDataForm" dataContainer="marketDataDc" width="100%">
                        <column width="100%">
                            <textField id="wellCountField" property="wellCount" required="false"/>
                            <textField id="newWellYearField" property="newWellYear" required="false"/>
                            <textField id="runbackInYearField" property="runbackInYear" editable="false"/>
                            <textField id="totalInstallInYearField" property="totalInstallInYear" editable="false"/>
                            <textField id="pullsInYearField" property="pullsInYear" editable="false"/>
                            <textField id="totalRunbackInYearField" property="totalRunbackInYear" editable="false"/>
                            <currencyField id="budgetField" property="budget" required="false" currency="$"/>
                        </column>
                    </form>
                </groupBox>

                <groupBox caption="msg://marketDataFragmentHeaders.boretsData"
                          icon="INDUSTRY" showAsPanel="true" stylename="borderless">
                    <form id="boretsDataForm" dataContainer="marketDataDc" width="100%">
                        <column width="100%">
                            <textField id="bWellCountField" property="bWellCount" required="false"/>
                            <textField id="bShareField" property="bShare" required="false"/>
                            <currencyField id="marketShareTargetField" property="marketShareTarget" required="false"/>
                            <currencyField id="espLtTargetField" property="espLtTarget" required="false" currency="$"/>
                            currency="$"/>
                            <lookupField id="recordTypeField" property="recordType" required="false"/>
                            <!--                            <textField id="oilPermitsField" property="oilPermits" required="false"/>-->
                            <!--                            <textField id="rigQtyField" property="rigQty" required="false"/>-->
                            <!--                            <textField id="ducQtyField" property="ducQty" required="false"/>-->
                            <textField id="completionField" property="completion" required="false"/>
                            <textField id="activityRateField" property="activityRate" required="false"/>
                        </column>
                    </form>

                </groupBox>

                <groupBox caption="msg://marketDataFragmentHeaders.additionalData"
                          icon="PLUS_CIRCLE" showAsPanel="true" stylename="borderless">
                    <form id="additionalDataForm" dataContainer="marketDataDc" width="100%">
                        <column width="100%">
                            <textField id="wellCheckRateField" property="wellCheckRate" required="false"/>
                            <checkBox id="isWellMonitorField" property="isWellMonitor"/>
                            <textField id="wellMonitorQtyField" property="wellMonitorQty" required="false"/>
                            <currencyField id="rentalCapexField" property="rentalCapex" required="false" currency="$"/>
                        </column>
                    </form>
                </groupBox>
            </hbox>

        </scrollBox>
    </layout>
</fragment>

