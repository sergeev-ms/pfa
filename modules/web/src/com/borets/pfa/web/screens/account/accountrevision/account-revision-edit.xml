<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://accountRevisionEdit.caption" focusComponent="form"
        messagesPack="com.borets.pfa.web.screens.account.accountrevision">
    <data>
        <instance id="accountRevisionDc"
                  class="com.borets.pfa.entity.account.AccountRevision">
            <view extends="_local">
                <property name="manager" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="accountRevisionDc">
            <column width="450px">
                <datePicker id="yearMonthField" resolution="MONTH" caption="msg://yearMonthField.caption" stylename="custom-height"/>
                <pickerField id="managerField" property="manager" required="true">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <lookupField id="typeField" property="type" required="true"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
