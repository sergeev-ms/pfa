<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://systemDetailBrowse.caption"
        focusComponent="systemDetailsTable"
        messagesPack="com.borets.pfa.web.screens.dataadmin">
    <data readOnly="true">
        <collection id="systemDetailsDc" class="com.borets.pfa.entity.account.system.SystemDetail">
            <view extends="_local">
                <property name="equipmentType" view="_minimal"/>
                <property name="partNumber" view="_minimal"/>
                <property name="system" view="_minimal">
                    <property name="allocation" view="_local">
                        <property name="applicationData">
                            <property name="account" view="_minimal">
                                <property name="parent" view="_minimal"/>
                            </property>
                        </property>
                    </property>
                </property>
            </view>
            <loader id="systemDetailsDl">
                <query>
                    <![CDATA[select e
                            from pfa_SystemDetail e
                            join e.system s
                            join pfa_SystemAllocation sa on sa.system = s
                            join sa.applicationData ad
                            join ad.account a
                            where a.actualRevision.active = true
                            order by a.name, s.id, e.equipmentType.order]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="systemDetailsTable" spacing="true">
        <filter id="filter" applyTo="systemDetailsTable" dataLoader="systemDetailsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="systemDetailsTable" width="100%" dataContainer="systemDetailsDc">
            <actions>
                <action id="view" type="view"/>
            </actions>
            <columns>
                <column id="system.allocation.applicationData.account.parent.name"
                        caption="msg://com.borets.pfa.entity.account/Account.parent"/>
                <column id="system.allocation.applicationData.account.name"/>
                <column id="system.id"/>
                <column id="system.allocation.run1"/>
                <column id="system.allocation.run2"/>
                <column id="equipmentType"/>
                <column id="partNumber.wtPartNumber"/>
                <column id="partNumber.name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                <button id="editBtn" action="systemDetailsTable.view"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
