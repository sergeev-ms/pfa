<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://motorTypeBrowse.caption" focusComponent="motorTypesTable"
        messagesPack="com.borets.pfa.web.screens.account.system.classification.motortype">
    <data readOnly="true">
        <collection id="motorTypesDc" class="com.borets.pfa.entity.account.system.classification.MotorType">
            <view extends="_local"/>
            <loader id="motorTypesDl">
                <query>
                    <![CDATA[select e from pfa_MotorType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="motorTypesTable" spacing="true">
        <filter id="filter" applyTo="motorTypesTable" dataLoader="motorTypesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="motorTypesTable" width="100%" dataContainer="motorTypesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true">
                <button id="createBtn" action="motorTypesTable.create"/>
                <button id="editBtn" action="motorTypesTable.edit"/>
                <button id="removeBtn" action="motorTypesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
