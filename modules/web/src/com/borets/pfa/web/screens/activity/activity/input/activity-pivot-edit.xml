<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://activityPivotEdit.caption"
        focusComponent="headerForm"
        messagesPack="com.borets.pfa.web.screens.activity.activity.input">
    <data>
        <instance id="activityDc" class="com.borets.pfa.entity.activity.Activity">
            <view extends="_local">
                <property name="account" view="_minimal">
                    <property name="contractType"/>
                </property>
                <property name="details" view="_local">
                    <property name="analytic"/>
                    <property name="yearMonth"/>
                </property>
            </view>
            <loader/>
            <collection id="detailsDc" property="details"/>
        </instance>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="editActions" spacing="true">
        <groupBox id="generalGb" caption="msg://generalGb.caption">
            <form id="headerForm" dataContainer="activityDc" width="100%" childrenCaptionWidth="100px">
                <column width="100%">
                    <pickerField id="accountField" property="account" required="true">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <datePicker id="validFromField" property="periodFrom" resolution="MONTH" stylename="custom-height"/>
                </column>
                <column width="100%">
                    <textField property="account.contractType"/>
                    <datePicker id="validToField" property="periodTo" resolution="MONTH" stylename="custom-height"/>
                </column>
                <column width="100%">
                    <lookupField id="recordTypeField" property="recordType" required="true"/>
                </column>
                <column width="100%">
                    <linkButton id="fillFromPrevBtn" caption="msg://fillFromPrevBtn.caption" height="34px" icon="COPY"/>
                </column>
            </form>
        </groupBox>
        <groupBox id="detailsBox" caption="msg://com.borets.pfa.entity.activity/Activity.details" spacing="true">
            <groupBox id="filterGb" caption="msg://filterGb.caption" collapsable="true">
                <hbox spacing="true">
                    <lookupField id="filterJobTypeField" optionsEnum="com.borets.pfa.entity.activity.JobType" inputPrompt="msg://filterJobType.caption"/>
                    <lookupField id="filterWellEquipField" optionsEnum="com.borets.pfa.entity.activity.WellEquip" inputPrompt="msg://filterWellEquip.caption"/>
                    <lookupField id="filterWellTagField" optionsEnum="com.borets.pfa.entity.activity.WellTag" inputPrompt="msg://filterWellTag.caption"/>
                </hbox>
            </groupBox>
            <scrollBox width="100%">
                <grid id="pivotGrid" spacing="true">
                    <columns>
                        <column/>
                    </columns>
                    <rows>
                        <row/>
                    </rows>
                </grid>
            </scrollBox>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
