<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
        <instance id="equipmentUtilizationDc" class="com.borets.pfa.entity.account.utilization.EquipmentUtilization" provided="true">
            <collection id="utilizationDetailsDc" property="details"/>
        </instance>
        <collection id="equipmentUtilizationDetailValueDc" provided="true"
                    class="com.borets.pfa.entity.account.utilization.EquipmentUtilizationDetailValue"/>
    </data>
    <layout spacing="true" expand="sb">
        <form id="form" dataContainer="equipmentUtilizationDc">
            <column width="450px">
                <datePicker id="validFromField" resolution="MONTH" stylename="custom-height" property="validFrom"/>
            </column>
            <column>
                <lookupField id="recordTypeField" property="recordType" required="true"/>
            </column>
        </form>
        <scrollBox id="sb">
            <grid id="pivotGrid" spacing="true">
                <columns>
                    <column/>
                </columns>
                <rows>
                    <row/>
                </rows>
            </grid>
        </scrollBox>
    </layout>
</fragment>

