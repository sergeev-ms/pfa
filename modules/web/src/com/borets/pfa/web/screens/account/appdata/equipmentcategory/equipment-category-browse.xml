<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://equipmentCategoryBrowse.caption"
        focusComponent="equipmentCategoriesTable"
        messagesPack="com.borets.pfa.web.screens.account.appdata.equipmentcategory">
    <data readOnly="true">
        <collection id="equipmentCategoriesDc"
                    class="com.borets.pfa.entity.account.appdata.EquipmentCategory">
            <view extends="_local"/>
            <loader id="equipmentCategoriesDl">
                <query>
                    <![CDATA[select e from pfa_EquipmentCategory e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="equipmentCategoriesTable"
            spacing="true">
        <filter id="filter"
                applyTo="equipmentCategoriesTable"
                dataLoader="equipmentCategoriesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="equipmentCategoriesTable"
                    width="100%"
                    dataContainer="equipmentCategoriesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="equipmentCategoriesTable.create"/>
                <button id="editBtn" action="equipmentCategoriesTable.edit"/>
                <button id="removeBtn" action="equipmentCategoriesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
