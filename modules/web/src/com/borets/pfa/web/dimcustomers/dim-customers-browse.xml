<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://dimCustomersBrowse.caption" focusComponent="dimCustomersesTable"
        messagesPack="com.borets.pfa.web.dimcustomers">
    <data readOnly="true">
        <collection id="dimCustomersesDc" class="com.borets.pfa.entity.customer.DimCustomers" view="_local">
            <loader id="dimCustomersesDl">
                <query>
                    <![CDATA[select e from pfa_DimCustomers e order by e.customerName]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600" width="800"/>
    <layout expand="dimCustomersesTable" spacing="true">
        <filter id="filter" applyTo="dimCustomersesTable" dataLoader="dimCustomersesDl">
            <properties include=".*"/>
        </filter>
        <table id="dimCustomersesTable"
               width="100%"
               dataContainer="dimCustomersesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="customerNo">
                    <formatter class="com.haulmont.cuba.gui.components.formatters.NumberFormatter" format="#"/>
                </column>
                <column id="customerName"/>
                <column id="country"/>
                <column id="tag"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="dimCustomersesTable.create"/>
                <button id="editBtn" action="dimCustomersesTable.edit"/>
                <button id="removeBtn" action="dimCustomersesTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
